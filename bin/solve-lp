#!/usr/bin/env python
import click as click
import solver as slv


@click.command()
@click.argument('input', type=click.Path(exists=True))
@click.argument('output', type=click.Path())
@click.option('-n', '--num-pieces', type=int, default=16)
@click.option('-m', '--max-iter', type=int, default=1000)
def solve_lp(input, output, num_pieces, max_iter):
    images = slv.subdivide_image(slv.load_image(input), num_pieces)
    x, y = slv.solve_lp(images, max_iter)
    slv.save_image(output, slv.reconstruct(images, x, y))


if __name__ == '__main__':
    solve_lp()
